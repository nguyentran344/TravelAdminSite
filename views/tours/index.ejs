<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Tour Management</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        padding-top: 50px;
      }
      .tour-card {
        margin-bottom: 20px;
      }
      .tour-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center mb-4">Tour Management</h1>
      <div class="text-end mb-3">
        <a href="/tours/new" class="btn btn-primary">Add New Tour</a>
      </div>
      <div class="row">
        <% tours.forEach(function(tour) { %>
        <div class="col-md-4 tour-card">
          <div class="card">
            <img
              src="<%= tour.avatar %>"
              class="card-img-top tour-image"
              alt="<%= tour.cityName %>"
            />
            <div class="card-body">
              <h5 class="card-title">
                <%= tour.cityName %>, <%= tour.countryName %>
              </h5>
              <p class="card-text">
                Price: $<%= tour.price %><br />
                Start Date: <%= new Date(tour.startDate).toLocaleDateString()
                %><br />
                Duration: <%= tour.duration %> days
              </p>
              <div class="d-flex justify-content-between">
                <a href="/tours/edit/<%= tour._id %>" class="btn btn-warning"
                  >Edit</a
                >
                <form
                  action="/tours/<%= tour._id %>?_method=DELETE"
                  method="POST"
                  class="d-inline"
                >
                  <button
                    type="submit"
                    class="btn btn-danger"
                    onclick="return confirm('Are you sure?')"
                  >
                    Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
